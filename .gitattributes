# Set default behavior to automatically normalize line endings.
* text=auto

# Explicitly enforce LF line endings for all text files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.mts text eol=lf
*.cts text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.json text eol=lf
*.md text eol=lf
*.markdown text eol=lf
*.txt text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.py text eol=lf
*.php text eol=lf

# Configuration files
.eslintrc* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
package.json text eol=lf
package-lock.json text eol=lf
*.sample text eol=lf

# Documentation and template files
README* text eol=lf
LICENSE* text eol=lf
CHANGELOG* text eol=lf
*.def text eol=lf
*.jst text eol=lf

# Binary files (explicitly marked to avoid corruption)
*.map binary
*.pack binary
*.idx binary
*.lock binary
*.iml binary
