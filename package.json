{
    "name": "indesign-scripts",
    "private": true,
    "version": "0.0.0",
    "description": "Utilities and export scripts for Adobe InDesign (ExtendScript)",
    "scripts": {
        "lint": "eslint \"Scripts/**/*.jsx\"",
        "format": "prettier --write \"Scripts/**/*.jsx\" \"UXP/**/*.js\" \"*.json\" \"*.md\"",
        "format:check": "prettier --check \"Scripts/**/*.jsx\" \"UXP/**/*.js\" \"*.json\" \"*.md\"",
        "guard:findchange": "node .wip/migration/findchange/findchange-guard.js",
        "guard:scope": "node .wip/migration/scope/scope-guard.js"
    },
    "devDependencies": {
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^10.1.8",
        "prettier": "^3.6.2"
    }
}
